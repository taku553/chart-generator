# Firebase設定
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Stripe設定（フロントエンド用）
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx

# Stripe価格ID（本番環境では本番のIDに置き換え）
# Stripeダッシュボード > Products > 各商品の価格IDを設定
VITE_STRIPE_PRICE_STANDARD_MONTHLY=price_1SmQV8EAvqOB6oQP46mevNgM
VITE_STRIPE_PRICE_STANDARD_YEARLY=price_1SmQV7EAvqOB6oQPx4obgeQ8
VITE_STRIPE_PRICE_PRO_MONTHLY=price_1SmQV6EAvqOB6oQP7gePYfMM
VITE_STRIPE_PRICE_PRO_YEARLY=price_1SmQV6EAvqOB6oQPvTV6xrSK

# OpenAI API
VITE_OPENAI_API_KEY=sk-xxxxxxxxxxxxxx

# 開発者設定（開発環境のみ）
# 開発者モードを有効にすると、指定されたメールアドレスのユーザーは
# Stripe決済なしでProプランの機能を無制限で使用できます
VITE_DEVELOPER_MODE=true
VITE_DEVELOPER_EMAILS=your-email@gmail.com,another-email@gmail.com

# Stripe APIキー（サーバーサイド/スクリプト用）
# これらのキーは .env.local に設定し、絶対にGitにコミットしないこと！
STRIPE_TEST_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_LIVE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
